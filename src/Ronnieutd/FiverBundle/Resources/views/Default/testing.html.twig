        &lt;directory&gt;../src/ClientName/WebBundle/Tests&lt;/directory&gt;
        &lt;/testsuite&gt;
        &lt;testsuite name=&quot;command&quot;&gt;
        &lt;directory&gt;../src/ClientName/WebBundle/Tests/Command&lt;/directory&gt;
